#!/usr/bin/env ruby

require 'rubygems'
require 'commander/import'

program :name, 'drkmen'
program :version, '0.0.1'
program :description, 'Create and list user places via CLI'

command :list do |c|
  c.syntax = 'drkmen list [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Drkmen::Commands::List
  end
end

command :new do |c|
  c.syntax = 'drkmen new [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Drkmen::Commands::New
    puts 'Starting with new property'
    puts 'Title: '
    puts 'Address: '
  end
end

command :continue do |c|
  c.syntax = 'drkmen continue [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Drkmen::Commands::Continue
  end
end

